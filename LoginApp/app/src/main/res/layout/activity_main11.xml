<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Ввод количества испытаний -->
    <EditText
        android:id="@+id/editTextTrials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество испытаний"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Ввод параметра z0 -->
    <EditText
        android:id="@+id/editTextZ0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Параметр z0"
        android:inputType="numberDecimal"
        android:layout_below="@id/editTextTrials"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Ввод половинной разрядности числа -->
    <EditText
        android:id="@+id/editTextHalfDigit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Половинная разрядность числа"
        android:inputType="number"
        android:layout_below="@id/editTextZ0"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Кнопка для запуска расчета -->

    <!-- Вывод результата -->

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextHalfDigit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="142dp"
        android:text="Рассчитать" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат:"
        android:layout_below="@id/buttonCalculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
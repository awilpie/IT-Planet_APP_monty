<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <!-- Ввод вероятностей событий -->
    <TextView
        android:id="@+id/txtEventProbabilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите вероятности событий через запятую:"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtEventProbabilities"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Пример: 0.2, 0.3, 0.5"
        android:layout_below="@id/txtEventProbabilities"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Ввод количества испытаний -->
    <TextView
        android:id="@+id/txtTrialCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите количество испытаний:"
        android:layout_below="@id/edtEventProbabilities"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtTrialCount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Пример: 1000"
        android:inputType="number"
        android:layout_below="@id/txtTrialCount"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Кнопка "Смоделировать" -->
    <Button
        android:id="@+id/btnSimulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Моделировать"
        android:layout_below="@id/edtTrialCount"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <!-- Результаты моделирования -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSimulate"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txtResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"/>

    </ScrollView>

</RelativeLayout>

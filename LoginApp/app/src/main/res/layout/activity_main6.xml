<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewAProbability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вероятность события A:"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextAProbability"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите вероятность события A (0-1)"
        android:layout_below="@id/textViewAProbability"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewBProbability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вероятность события B:"
        android:layout_below="@id/editTextAProbability"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextBProbability"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите вероятность события B (0-1)"
        android:layout_below="@id/textViewBProbability"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewConditionalProbability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Условная вероятность P(B|A):"
        android:layout_below="@id/editTextBProbability"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextConditionalProbability"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите условную вероятность P(B|A) (0-1)"
        android:layout_below="@id/textViewConditionalProbability"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewTrials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество испытаний:"
        android:layout_below="@id/editTextConditionalProbability"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editTextTrials"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите количество испытаний"
        android:layout_below="@id/textViewTrials"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSimulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Моделировать"
        android:layout_below="@id/editTextTrials"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewDependentSimulationResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат моделирования:"
        android:textStyle="bold"
        android:layout_below="@id/btnSimulate"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDependentSimulationResult"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textViewResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"/>

    </ScrollView>

</RelativeLayout>
